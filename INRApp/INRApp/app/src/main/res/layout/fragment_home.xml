<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242837"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#d3d8e2"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-medium"
        android:layout_marginTop="50dp"

        android:text="My Dashboard"
        android:layout_height="wrap_content">
    </TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#282f3f"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"

        android:padding="10dp"
        app:cardCornerRadius="20dp"
        app:cardPreventCornerOverlap="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="#d3d8e2"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"

                android:text="My Remainders"
                android:layout_height="wrap_content">

            </TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_access_time_black_24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp">

            </ImageView>
        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="06:30 PM"
                android:id="@+id/time"
                android:textStyle="bold"
                android:textColor="#d3d8e2"
                android:textSize="30sp"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#d3d8e2"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="Would you like to change the time of the alarm ?"
                android:layout_height="wrap_content">

            </TextView>

            <EditText
                android:id="@+id/timeSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#d3d8e2"
                android:textColorHint="#d3d8e2"
                android:shadowColor="#d3d8e2"
                app:backgroundTint="#d3d8e2"
                android:clickable="false"
                android:cursorVisible="false"
                android:layout_gravity="center"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Select Time"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#282f3f"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardPreventCornerOverlap="true"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"

                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#d3d8e2"
                        android:textSize="15sp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="sans-serif-medium"

                        android:text="Treatment Range"
                        android:layout_height="wrap_content">

                    </TextView>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:src="@drawable/ic_assessment_black_24dp">

                    </ImageView>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="left"
                    android:id="@+id/treatment_range"
                    android:textStyle="bold"
                    android:textColor="#d3d8e2"
                    android:textSize="25sp"
                    android:layout_marginLeft="20dp"
                    android:text="20-5.0"
                    android:layout_height="wrap_content">

                </TextView>




            </LinearLayout>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#282f3f"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            app:cardCornerRadius="20dp"
            android:layout_weight="1"
            app:cardPreventCornerOverlap="true"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#d3d8e2"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginRight="10dp"
                        android:text="Warfarin Indication"
                        android:layout_height="wrap_content">

                    </TextView>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:src="@drawable/ic_broken_image_black_24dp"

                        >

                    </ImageView>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/warfarin_indication"
                    android:textStyle="bold"
                    android:textColor="#d3d8e2"
                    android:textSize="15sp"
                    android:text="Venous Thrombosis"
                    android:layout_height="wrap_content">

                </TextView>




            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#282f3f"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        app:cardCornerRadius="20dp"
        app:cardPreventCornerOverlap="true"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"

            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#d3d8e2"
                android:textSize="15sp"
                android:fontFamily="sans-serif-medium"
                android:layout_margin="10dp"
                android:text="Recommendation"
                android:layout_height="wrap_content">

            </TextView>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_assignment_black_24dp"
                android:layout_marginLeft="20dp">

            </ImageView>
        </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:id="@+id/recommendation"
                android:textColor="#d3d8e2"
                android:textSize="12sp"
                android:text="If the two previous INRs were in range, you might consider not making any adjustments to the dose. Consider increasing the maintenance dose by 5–10%. Consider a single booster of 1.5–2× the daily maintenance dose. sSchedule the next appointment in 3–7 days"
                >

            </TextView>




        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
